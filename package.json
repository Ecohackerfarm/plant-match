{
  "name": "powerplant",
  "version": "0.1.0",
  "description": "powerplant is a open source software that allows anyone planning a garden to utilize companion planting and other permaculture practices. It provides intelligent suggestions to help the gardener by advising the best planting schedules and combinations of crops to maximize the garden's yield.",
  "main": "server.js",
  "scripts": {
    "preinstall": "sh ./.git_hooks/_init-hooks-path.sh",
    "start": "nodemon --watch server --exec babel-node -- server/server.js",
    "test": "mocha --compilers js:babel-register",
    "lint": "eslint cli client server shared test",
    "pretty": "find client server shared test cli -type f -name '*.js' | xargs ./node_modules/.bin/prettier --write",
    "migrate": "npm run cli -- remove crop-relationship && npm run cli -- remove crop && npm run cli -- push-firebase",
    "mocha-spec": "mocha --compilers js:babel-register --reporter markdown > docs/spec.md",
    "mongo": "docker run -p 27017:27017 --name pp_main -d mongo",
    "doc": "jsdoc -u ./docs/tutorials -c ./conf.json -t ./node_modules/ink-docstrap/template -R ./docs/dev_docs.markdown",
    "cli": "babel-node -- cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ecohackerfarm/powerplant.git"
  },
